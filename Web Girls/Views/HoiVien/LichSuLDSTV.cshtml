@{
     var list = (List<Web_Girls.Models.ModelsView.LDSTView>)ViewBag.list;
}
<style>
    /* Màu nền cho tiêu đề cột */
    table thead th {
        background-color: #457b9d; /* Xanh nhạt */
        color: white; /* Màu chữ trắng */
        text-align: center;
        vertical-align: middle;
    }

    /* Màu nền cho các ô dữ liệu */
    table tbody td {
        background-color: #f8f9fa; /* Màu nền nhạt */
    }

    /* Dòng được chọn (hover) */
    table tbody tr:hover {
        background-color: #d1ecf1; /* Xanh nhạt khi hover */
    }

    /* Đường viền */
    table {
        border-collapse: collapse;
    }

        table th, table td {
            border: 1px solid #dee2e6;
            padding: 8px;
        }
</style>
<div class="modal-content">
     <div class="modal-header">
          <h4 class="modal-title">Lịch sử lao động sáng tạo</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
     </div>
     <div class="modal-body">
          <table class="table table-hover table-bordered text-center">
               <thead>
                    <tr>
                         <td style="font-weight:500">Tên đề tài</td>
                         <td>Loại đề tài</td>
                         <td>Kết quả</td>
                         <td>Vai trò</td>
                         <td>Năm</td>
                    </tr>
               </thead>
               <tbody>
                    @foreach (var item in list)
                    {
                    <tr>
                         <td>@item.TenDeTai</td>
                         <td>@item.LoaiDeTai</td>
                         <td>@item.KetQua</td>
                         <td>@item.VaiTro</td>
                         <td>@item.Nam</td>

                    </tr>
                    }
               </tbody>
          </table>


     </div>
</div>



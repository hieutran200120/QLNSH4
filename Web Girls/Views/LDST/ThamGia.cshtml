@{
     var list = (List<Web_Girls.Models.Context.ThamGia>)ViewBag.thamgia;


}
<style>
    /* Màu nền cho tiêu đề cột */
    table thead th {
        background-color: #457b9d; /* Xanh nhạt */
        color: white; /* Màu chữ trắng */
        text-align: center;
        vertical-align: middle;
    }

    /* Màu nền cho các ô dữ liệu */
    table tbody td {
        background-color: #f8f9fa; /* Màu nền nhạt */
    }

    /* Dòng được chọn (hover) */
    table tbody tr:hover {
        background-color: #d1ecf1; /* Xanh nhạt khi hover */
    }

    /* Đường viền */
    table {
        border-collapse: collapse;
    }

        table th, table td {
            border: 1px solid #dee2e6;
            padding: 8px;
        }
</style>
<div class="modal-content">
     <div class="modal-header">
          <h4 class="modal-title">Danh sách tham gia đề tài</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
     </div>
     <div class="modal-body">
          @if (list != null)
          {
               <table class="table table-hover table-bordered text-center">
                    <thead>
                         <tr>
                              <td>Họ tên</td>
                              <td>Đơn vị</td>
                              <td>Vai trò</td>

                         </tr>
                    </thead>
                    <tbody>
                         @foreach (var item in list)
                         {
                         <tr>
                              <td>@item.HoTen</td>
                              <td>@item.DonVi</td>
                              <td>@item.VaiTro</td>
                         </tr>
                         }
                    </tbody>
               </table>
          }
          else
          {
               <h2>Chưa có thông tin</h2>
          }


     </div>
</div>




